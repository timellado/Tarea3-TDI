<div class="intro">
  <h1>Resultados busqueda "<%=@search%>"</h1>
</div>

<% if @films != [] %>
  <div class="films">
    <table>
      <thead>
        <th>Pel√≠culas</th>
      </thead>
      <tbody>
        <% @films.each do |film| %>
          <td class="hover"><%= link_to film[:name], {controller: "app", action: "film", url: film[:url]} %></td>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<% if @people != [] %>
  <div class="people">
    <table>
      <thead>
        <th>Personajes</th>
      </thead>
      <tbody>
        <% @people.each do |person| %>
          <td class="hover"><%= link_to person[:name], {controller: "app", action: "person", url: person[:url]} %></td>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<% if @planets != [] %>
  <div class="planets">
    <table>
      <thead>
        <th>Planetas</th>
      </thead>
      <tbody>
          <% @planets.each do |planet| %>
          <td class="hover"><%= link_to planet[:name], {controller: "app", action: "planet", url: planet[:url]} %></td>
          <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<% if @starships != [] %>
  <div class="starships">
    <table>
      <thead>
        <th>Naves</th>
      </thead>
      <tbody>
          <% @starships.each do |starship| %>
          <td class="hover"><%= link_to starship[:name], {controller: "app", action: "starship", url: starship[:url]} %></td>
          <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<% if @starships == [] && @planets == [] && @people == [] && @films == [] %>
  <div class="intro">
    <h2>No hay resultados que mostrar</h2>
  </div>
<% end %>
